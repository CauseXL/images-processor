{
  "include": [
    "./src",
    "twind.d.ts"
  ],
  "compilerOptions": {
    "module": "esnext",
    "lib": [
      "dom",
      "esnext"
    ],
    "declaration": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "sourceMap": true,
    "rootDir": "./src",
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "types": [
      "@emotion/react/types/css-prop"
    ]
  }
}